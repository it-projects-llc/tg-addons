<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <menuitem
        id="affiliate_menu_root"
        name="Affiliate Management"
        web_icon="tg_website_sale_affiliate,static/description/icon.png"
        groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
        sequence="6"
    />

    <menuitem
        id="sale_affiliate_menu"
        name="Affiliates"
        sequence="10"
        parent="affiliate_menu_root"
        action="website_sale_affiliate.sale_affiliate_action"
    />

    <menuitem
        id="sale_affiliate_request_menu"
        name="Affiliate Requests"
        sequence="20"
        parent="affiliate_menu_root"
        action="website_sale_affiliate.sale_affiliate_request_action"
    />

    <record id="loyalty_program_action_promo_program" model="ir.actions.act_window">
        <field name="name">Promotion Programs</field>
        <field name="res_model">loyalty.program</field>
        <field name="view_mode">tree,kanban,form</field>
        <field
            name="view_ids"
            eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree'}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('loyalty.loyalty_program_view_form')})]"
        />
        <field name="search_view_id" ref="loyalty.loyalty_program_view_search" />
        <field name="domain">[('program_type', '=', 'promotion')]</field>
        <field name="context">{
            'default_program_type': 'promotion',
            'default_only_affiliate_usage': True,
            'lock_promo_code_usage': 1,
            }</field>
    </record>

    <menuitem
        id="menu_coupons"
        name="Promotion programs"
        sequence="30"
        parent="affiliate_menu_root"
        action="loyalty_program_action_promo_program"
    />

</odoo>
